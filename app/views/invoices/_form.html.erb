<!-- Стандартная форма объекта "Товар из инвойса" -->
<%= form_with(model: invoice, local: true) do |form| %>
  <% if invoice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
        <% invoice.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :invoice_operation_number %>
    <%= form.number_field :invoice_operation_number %>
  </div>

  <div class="field">
    <%= form.label :invoice_operation_date %>
    <%= form.date_select :invoice_operation_date %>
  </div>

  <div class="field">
    <%= form.label :company_code %>
    <%= form.text_field :company_code %>
  </div>

  <div class="field">
    <%= form.label :batch_id %>
    <%= form.text_field :batch_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
